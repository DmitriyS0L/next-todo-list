{
  "extends": "../tsconfig.base.json",
  "compilerOptions": {
    "module": "commonjs",
    "target": "ES2021",
    "strict": true,
    "moduleResolution": "node",
    "outDir": "dist",
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "skipLibCheck": true,
    "baseUrl": "./",
    "paths": {
      "@libs": ["../libs/src/index.ts"],
      "@libs/*": ["../libs/src/*"]
    }
  },
  "references": [{ "path": "../libs" }],
  "include": ["src"],
  "exclude": ["dist", "node_modules"]
}
